<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageViewUsuarioThePost"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_usuario_regist"
            app:civ_circle_background_color="@color/yellow_claro"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textViewTitleThePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Servicio"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/textViewRelativeTimeThePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hace 0 minutos"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                />
            </LinearLayout>
        
        <ImageView
            android:id="@+id/imageViewDeleteThePost"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_cancel_pink"
            />





    </LinearLayout>

</FrameLayout>